<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.kuaikuaidai.kkdaireport.fragment.kpi.NewsCenterFragment">

    <include
        layout="@layout/view_back_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center"
            android:text="@string/user_id"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/date_select_normal"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1"
            android:minWidth="70dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/start"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/date_select_normal"
            android:gravity="center"
            android:minWidth="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/end"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/date_select_normal"
            android:gravity="center"
            android:minWidth="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/bt_query"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/query"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/bt_clear_query"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/bt_query"
            android:background="@drawable/clear_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/clear_query"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/bt_group_check"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/group_button"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/group_check"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="EC统计"/>

</LinearLayout>
