<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <include layout="@layout/view_line_v_m"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/order_number"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/user_id"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/subject_name"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/subject_deadline"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/refund_stage_num"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/contact_refund_date"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/actual_refund_date"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/actual_invest_money"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/invest_vocher_money"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/invest_money"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/refund_money"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/interest"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/award_interest"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="@string/punish_interest"
                android:textColor="@color/txt_color2"
                android:textSize="12dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


        </LinearLayout>

        <include layout="@layout/view_line_v_m"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_subject_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:id="@+id/tv_subject_deadline"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_refund_stage_num"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_contact_refund_date"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_actual_refund_date"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_actual_invest_money"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


            <TextView
                android:id="@+id/tv_invest_vocher_money"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_invest_money"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_refund_money"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_interest"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_award_interest"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>

            <TextView
                android:id="@+id/tv_punish_interest"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14dp">
            </TextView>

            <include layout="@layout/view_line_h"/>


        </LinearLayout>

        <include layout="@layout/view_line_v_m"/>
    </LinearLayout>

</LinearLayout>

